    <!--CONTENT-->
  <div
    class="w-full p-8 mx-auto md:w-3/5 lg:w-2/5 bg-transparent border-0 border-gray-200 rounded-lg md:bg-ante-500 md:bg-opacity-50"
  >
    <h1 class="mb-1 text-xl font-medium text-center md:text-3xl">
      Create your Free Account
    </h1>

    <p class="mb-2 text-sm font-normal text-center text-gray-800 md:text-base">
      Already have an account?
      <a href="/login" class="text-violet-700 hover:text-violet-900">Sign in</a>
    </p>
    <!--FORM-->
    <form action="/signup" method="POST" class="mt-8 space-y-4">
      <label for="username" class="block">
        <span class="block mb-1 text-xs font-medium text-gray-800"
          >Username:</span
        >
        <input
          class="w-full bg-gray-300 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-900 rounded border border-gray-600 focus:border-violet-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          type="text"
          name="userName"
          required
        />
      </label>

      <label for="email" class="block">
        <span class="block mb-1 text-xs font-medium text-gray-700">Email:</span>
        <input
          class="w-full bg-gray-300 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-900 rounded border border-gray-600 focus:border-violet-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          type="email"
          inputmode="email"
          name="email"
          required
        />
      </label>

      <label for="password" class="block">
        <span class="block mb-1 text-xs font-medium text-gray-800"
          >Password:</span
        >
        <input
          class="w-full bg-gray-300 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-900 rounded border border-gray-600 focus:border-violet-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          type="password"
          name="password"
          required
        />
      </label>

      <label for="confirmPassword" class="block">
        <span class="block mb-1 text-xs font-medium text-gray-800"
          >Confirm Password:</span
        >
        <input
          class="w-full bg-gray-300 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-violet-900 rounded border border-gray-600 focus:border-violet-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
          type="password"
          name="confirmPassword"
          required
        />
      </label>

      <input
        type="submit"
        class="text-white bg-violet-600 border-0 py-2 px-6 focus:outline-none hover:bg-violet-500 rounded text-lg"
        value="Sign Up"
      />
    </form>

    <p class="my-5 text-xs font-medium text-center text-gray-700">
      By clicking "Sign Up" you agree to our
      <a href="#" class="text-violet-700 hover:text-violet-900"
        >Terms of Service</a
      >
      and
      <a href="#" class="text-violet-700 hover:text-violet-900"
        >Privacy Policy</a
      >.
    </p>
